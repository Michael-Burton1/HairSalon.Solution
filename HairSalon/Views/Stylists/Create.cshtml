@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="text"})

  @Html.LabelFor(model => model.Speciallity)
  @Html.TextBoxFor(model => model.Name, new {@class = "form-control", type="text", required="text"})

  @Html.LabelFor(model => model.PayRate)
  @Html.TextBoxFor(model => model.PayRate, new {@class = "form-control", type="number", step=".01", required="number"})

  <input type="submit" value="Add new stylist" />
}
<p>@Html.ActionLink("Show all stylists", "Index")</p>
